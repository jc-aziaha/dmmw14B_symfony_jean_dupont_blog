{% extends "themes/base_visitor.html.twig" %}

{% block title %} - Le blog sur la santé - Formulaire de contact{% endblock %}

{% block fontAwesome %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block main %}
    <main>
        {{ include('components/header_visitor.html.twig', {title: 'Contactez-moi'}) }}


        <div class="container my-5">
            <div class="row">
                <div class="col-md-6">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{message}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                    {{form_start(form)}}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="">Prénom</label>
                                    <div class="text-danger">{{form_errors(form.firstName)}}</div>
                                    {{form_widget(form.firstName, {'attr': {'class':'form-control'}})}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="">Nom</label>
                                    <div class="text-danger">{{form_errors(form.lastName)}}</div>
                                    {{form_widget(form.lastName, {'attr': {'class':'form-control'}})}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="">Email</label>
                                    <div class="text-danger">{{form_errors(form.email)}}</div>
                                    {{form_widget(form.email, {'attr': {'class':'form-control'}})}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="">Numéro de téléphone</label>
                                    <div class="text-danger">{{form_errors(form.phone)}}</div>
                                    {{form_widget(form.phone, {'attr': {'class':'form-control'}})}}
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="">Message</label>
                            <div class="text-danger">{{form_errors(form.message)}}</div>
                            {{form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 4}})}}
                        </div>
                        <div class="mb-3">
                            <input formnovalidate type="submit" class="btn btn-primary">
                        </div>
                    {{form_end(form)}}
                </div>
                <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
                    <div>
                        <p><i class="fa-solid fa-envelope"></i> : medecine-du-monde@gmail.com</p>
                        <p><i class="fa-solid fa-phone"></i> : 06 05 05 05 05</p>
                    </div>
                    <div>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d10498.075182420007!2d2.783593!3d48.8673858!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e61d19ca7ae2bd%3A0x57faf8cb6310e660!2sDisneyland%20Paris!5e0!3m2!1sfr!2sfr!4v1692866039763!5m2!1sfr!2sfr" class="w-100 h-100" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% extends "themes/base_admin.html.twig" %}

{% block title %}Le blog de Jean Dupont - Admin - Lire : {{post.title}}{% endblock %}

{% block description %}Le blog de Jean Dupont - Admin - Lire : {{post.title}}{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">{{post.title}}</h1>

    <div class="container my-5">

        {% if post.image %}
            <img src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.title }}" class="img-fluid">
        {% else %}
            <p>---</p>
        {% endif %}

        {{post.content|raw}}
    </div>
{% endblock %}

{% extends "themes/base_admin.html.twig" %}

{% block title %}Le blog de Jean Dupont - Admin - Mon profil{% endblock %}

{% block description %}Le blog de Jean Dupont - Admin - Mon profil{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Mon profil</h1>

    {% for message in app.flashes('success') %}
        <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        Profil
                    </div>
                    <div class="card-body">
                        <p class="card-text"><strong>Pr√©nom</strong> : {{app.user.firstName}}</p>
                        <p class="card-text"><strong>Nom</strong> : {{app.user.lastName}}</p>
                        <p class="card-text"><strong>Email</strong> : {{app.user.email}}</p>
                        <a href="{{path('admin.profile.edit')}}" class="m-2 btn btn-primary">Modifier le profil</a>
                        <a href="{{path('admin.profile.edit_password')}}" class="m-2 btn btn-secondary">Modifier le mot de passe</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
